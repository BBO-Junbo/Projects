<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tedu.DogWalkingAppointment.mapper.DogAvailabilityMapper">
    <resultMap id="DogAvailabilityEntityMap" type="cn.tedu.DogWalkingAppointment.entity.DogAvailability">
        <result column="availability_id" property="availabilityId"/>
        <result column="dog_id" property="dogId"/>
        <result column="is_reserved" property="isReserved"/>
        <result column="start_time" property="startTime"/>
        <result column="end_time" property="endTime"/>
        <result column="created_user" property="createdUser"/>
        <result column="created_time" property="createdTime"/>
        <result column="modified_user" property="modifiedUser"/>
        <result column="modified_time" property="modifiedTime"/>
    </resultMap>
    <insert id="insert" useGeneratedKeys="true">
        insert into dogAvailability(dog_id,is_reserved,start_time,end_time,created_user,created_time,modified_user,modified_time)
        values(#{dogId},#{isReserved},#{startTime},#{endTime},#{createdUser},#{createdTime},#{modifiedUser},#{modifiedTime})
    </insert>
    <select id="findByDogid" resultMap="DogAvailabilityEntityMap">
        select * from dogAvailability where dog_id=#{dogId}

    </select>
    <select id="findAllDogAvailability" resultMap="DogAvailabilityEntityMap">
        select * from dogAvailability order by created_time desc
    </select>
    <select id="findByAvailabilityId" resultMap="DogAvailabilityEntityMap">
        select * from dogAvailability where availability_id=#{availabilityId}
    </select>


    <delete id="deleteByAvailabilityId">
        delete from dogAvailability where availability_id=#{availabilityId}

    </delete>
    <update id="changeIsReservedByAvailabilityId">
        update dogavailability set is_reserved=1
        where availability_id=#{availabilityId}
    </update>


</mapper>